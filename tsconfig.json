{
  "compilerOptions": {
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["**/*.ts"],
  "ts-node": {
    "esm": true
  },
  "lib": ["esnext"]
}
